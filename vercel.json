{
  "version": 2,
  "installCommand": "npm install",
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/css/(.*)", "dest": "/public/css/$1" },
    { "src": "/js/(.*)", "dest": "/public/js/$1" },
    { "src": "/assets/(.*)", "dest": "/public/assets/$1" },
    { "src": "/pages/(.*)", "dest": "/public/pages/$1" },
    { "src": "/", "dest": "/public/pages/login.html" },
    { "src": "/(.*)", "dest": "/public/pages/login.html" }
  ]
}
